@model CalenderEventModel




<div class="modal fade" id="eventModal" role="dialog" aria-labelledby="eventModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg">
		<form id="eventForm"
			  asp-controller="Calender"
			  asp-action="Update"
			  method="post"
			  class="modal-content form-horizontal">
			<div class="modal-header">
				<h4 class="modal-title" id="event-title"></h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">×</span>
				</button>
			</div>
			<div class="modal-body">


				   <input asp-for="ID" type="hidden" id="ID" />
                <input asp-for="Start" type="hidden" id="Start" />
                <input asp-for="End" type="hidden" id="End" />

				<div class="form-group row">
					<label asp-for="Description" class="text-muted col-sm-2 col-form-label"></label>
					<div class="col-sm-10">
						<input asp-for="Description" id="Description" class="form-control">
					</div>
				</div>

				<div class="form-group row">
					<label asp-for="StartText" class="text-muted col-sm-2 col-form-label">Start Time</label>
					<div class="col-sm-10">
						<input asp-for="StartText" class="form-control">
						<span asp-validation-for="StartText" class="error invalid-feedback" />
					</div>
				</div>

				<div class="form-group row">
					<label asp-for="EndText" class="text-muted col-sm-2 col-form-label">End Time</label>
					<div class="col-sm-10">
						<input asp-for="EndText" id="EndText" class="form-control">
						<span asp-validation-for="EndText" class="error invalid-feedback" />
					</div>
				</div>


			</div>
			<div class="modal-footer justify-content-between">
				<button type="submit" class="btn btn-outline-primary">Save</button>
				<button type="submit" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
			</div>
		</form>
	</div>
</div>

























