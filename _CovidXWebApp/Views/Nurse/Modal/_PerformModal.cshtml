
@model TestViewModel



<div class="modal fade" id="@Model.ModalID" role="dialog" aria-labelledby="eventModalLabel" data-backdrop="static">
	<div class="modal-dialog modal-lg">
		<form 
			  asp-controller="Nurse"
			  asp-action="PerformTest"
			  method="post"
			  class="modal-content form-horizontal">
			<div class="modal-header card-outline card-info" >
				<h4 class="modal-title" id="event-title">Capture test details</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">×</span>
				</button>
			</div>
			<div class="modal-body ">


				<input asp-for="TestRequestId" type="hidden" id="RequestID" />


				<div class="form-group row">
					<label asp-for="BarCode" class="text-muted col-sm-2 col-form-label"></label>
					<div class="col-sm-10">
						<input asp-for="BarCode"  class="form-control">
						<span asp-validation-for="BarCode" class="error invalid-feedback" />
					</div>
				</div>

				<div class="form-group row">
					<label asp-for="BloodPressure" class="text-muted col-sm-2 col-form-label"></label>
					<div class="col-sm-10">
						<input asp-for="BloodPressure" class="form-control">
						<span asp-validation-for="BloodPressure" class="error invalid-feedback" />
					</div>
				</div>

				<div class="form-group row">
					<label asp-for="OxygenLevel" class="text-muted col-sm-2 col-form-label"></label>
					<div class="col-sm-10">
						<input asp-for="OxygenLevel"  class="form-control">
						<span asp-validation-for="OxygenLevel" class="error invalid-feedback" />
					</div>
				</div>

				<div class="form-group row">
					<label asp-for="Temp" class="text-muted col-sm-2 col-form-label"></label>
					<div class="col-sm-10">
						<input asp-for="Temp" type="text" class="form-control">
						<span asp-validation-for="Temp" class="error invalid-feedback" />
					</div>
				</div>


			</div>
			<div class="modal-footer justify-content-between">
				<button type="submit" class="btn btn-outline-info">Capture</button>
				<button type="submit" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
			</div>
		</form>
	</div>
</div>