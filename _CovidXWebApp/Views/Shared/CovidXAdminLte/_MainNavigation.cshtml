				{
					<div class="info">
						<a href="#" class="d-block">@nurse.FirstName @nurse.LastName</a>
					</div>
				}
				else
				{
					<div class="info">
						<a href="#" class="d-block">@User.Identity.Name</a>
					</div>
				}
			}
