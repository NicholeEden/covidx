				{
					<div class="image">
						<img src="~/img/Patient1.png" class="img-circle elevation-2" alt="User Image">
					</div>
				}

				if (patient is not null)
				{
					<div class="info">
						<a href="#" class="d-block">@patient.FirstName @patient.LastName</a>
					</div>

				}
				else
				{
					<div class="info">
						<a href="#" class="d-block">@User.Identity.Name</a>
					</div>
				}
			}
